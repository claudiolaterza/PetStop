<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.Gerar_QRCode_Activity">

    <ImageView
        android:id="@+id/ivQRCode"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/placa_com_pata"
        app:layout_constraintBottom_toTopOf="@+id/etData"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.259" />

    <EditText
        android:id="@+id/etData"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginBottom="332dp"
        android:background="@null"
        android:hint="Digite o nome do pet"
        app:layout_constraintBottom_toTopOf="@+id/btnGenerateQRcode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etIdade"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginBottom="92dp"
        android:background="@null"
        android:hint="Digite a idade do pet"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/btnGenerateQRcode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etData"
        app:layout_constraintVertical_bias="0.3" />

    <EditText
        android:id="@+id/etRaca"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@null"
        android:hint="Digite a raça do pet"
        app:layout_constraintBottom_toTopOf="@+id/btnGenerateQRcode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etIdade"
        app:layout_constraintVertical_bias="0.315" />


    <EditText
        android:id="@+id/etVacinas"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@null"
        android:hint="Digite as vacinas que seu pet já tomou"
        app:layout_constraintBottom_toTopOf="@+id/btnGenerateQRcode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etRaca" />

    <Button
        android:id="@+id/btnGenerateQRcode"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginBottom="48dp"
        android:layout_weight="1"
        android:text="Gerar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/voltar_gerar_qr"
        android:layout_width="69dp"
        android:layout_height="33dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/voltar" />

    <ImageView
        android:id="@+id/im_compartilhar_qr"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="184dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.175"
        app:layout_constraintStart_toEndOf="@+id/ivQRCode"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/compartilhar" />


</androidx.constraintlayout.widget.ConstraintLayout>