<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.PerfilVeterinarioActivity">

    <TextView
        android:id="@+id/tv_nome_perfil_veterinario"
        android:layout_width="369dp"
        android:layout_height="61dp"
        android:layout_marginBottom="356dp"
        android:hint="Nome do Veterinário"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_domicilio_perfil"
        android:layout_width="363dp"
        android:layout_height="69dp"
        android:layout_marginTop="20dp"
        android:hint="Atende em casa?"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_endereco_perfil_veterinario" />

    <TextView
        android:id="@+id/tv_endereco_perfil_veterinario"
        android:layout_width="366dp"
        android:layout_height="67dp"
        android:layout_marginTop="20dp"
        android:hint="Endereço do Veterinário"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_nome_perfil_veterinario" />

    <TextView
        android:id="@+id/tv_curriculo_perfil_veterinario"
        android:layout_width="366dp"
        android:layout_height="67dp"
        android:layout_marginTop="12dp"
        android:hint="Currículo do Veterinário"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_domicilio_perfil" />

    <ImageView
        android:id="@+id/voltar_perfil_veterinario"
        android:layout_width="69dp"
        android:layout_height="33dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/voltar" />

</androidx.constraintlayout.widget.ConstraintLayout>