<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.PerfilVeterinarioActivity">

    <ImageView
        android:id="@+id/voltar_perfil_veterinario"
        android:layout_width="69dp"
        android:layout_height="33dp"
        android:layout_marginEnd="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline18"
        app:layout_constraintHorizontal_bias="0.207"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/voltar" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="393dp"
        android:layout_height="671dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.266">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_nome_perfil_veterinario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Nome do Veterinário"
                android:textColor="#000000"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="Telefone"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_telefone_perfil_veterinario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Telefone do Veterinário"
                android:textColor="#000000"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="Endereço"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_endereco_perfil_veterinario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Endereço do Veterinário"
                android:textColor="#000000"
                android:textSize="24sp" />

            <CheckBox
                android:id="@+id/tv_domicilio_perfil1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:layout_marginTop="50dp"
                android:text="Atende em casa?"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_domicilio_perfil"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:hint="Atende em casa?"
                android:textColor="#000000"
                android:textSize="24sp"
                android:visibility="invisible" />


            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="Especialidades"
                android:textColor="#8A8A8A"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/anestesia_perfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:clickable="false"
                    android:text="Anestesiologia" />

                <CheckBox
                    android:id="@+id/cardiologia_perfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:clickable="false"
                    android:text="Cardiologia" />

                <CheckBox
                    android:id="@+id/cirurgia_perfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:text="Cirurgia" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/clinica_perfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:clickable="false"
                    android:text="Clínica Médica" />

                <CheckBox
                    android:id="@+id/dermatologia_perfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:clickable="false"
                    android:text="Dermatologia" />

                <CheckBox
                    android:id="@+id/endocrinologia_perfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:text="Endocrinologia" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/neurologia_perfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:clickable="false"
                    android:text="Neurologia" />

                <CheckBox
                    android:id="@+id/nutricao_perfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:clickable="false"
                    android:text="Nutrição" />

                <CheckBox
                    android:id="@+id/nefro_perfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:text="Nefrologia e Urologia" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/odontologia_perfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:clickable="false"
                    android:text="Odontologia" />

                <CheckBox
                    android:id="@+id/oftalmologia_perfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:clickable="false"
                    android:text="Oftalmologia" />

                <CheckBox
                    android:id="@+id/ortopedia_perfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:text="Ortopedia" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_curriculo_perfil_veterinario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Currículo do Veterinário"
                android:textColor="#000000"
                android:textSize="24sp" />


        </LinearLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>